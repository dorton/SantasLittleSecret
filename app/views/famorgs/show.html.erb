<% if @user.last_name.present? %>
  <% if current_user.famorgs.present? %>
  <div class="center">
    <h1><%= @famorg.seasons.last.year.strftime('%Y') %> <em><%= @famorg.name %></em></h1>
  </div>
  <div class="section" id="about_famorg">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Group Details</h4></li>
      <% if @famorg.date %>
      <li class="collection-item"><b>Date of Exchange:</b> <em><%= @famorg.date.strftime('%B %d, %Y') %></em></li>
      <% end %>
      <li class="collection-item"><b>Max Cost of Gifts:</b> <em><%= number_to_currency(@famorg.cost) %></em></li>
      <li class="collection-item"><b>Group admin:</b> <em><%= link_to @whoisadmin.name, user_path(@whoisadmin) %></em></li>
    </ul>
  </div>
  <div class="divider"></div>

      <% if @famorg.santas_assigned? %>
        <%= render 'assigned' %>
      <% else %>
        <%= render 'not_assigned' %>
      <% end %>
  <% else %>
    <%= render 'no_group' %>
  <% end %>
  <% if @famorg_admin.admin? %>
  <div class="row">
    <div class="col">
      <br><%= link_to "Edit Group", edit_famorg_path(@famorg), class: "btn red" %>
    </div>
  </div>
  <% end %>




<div class="divider"></div>

<div class="section discussion">
  <div class="">
    <h3>Discussion</h3>
    <div class="row">
      <div class="col s12">
        <div class="card-panel", id="comments-section">
          <ul id="comments">
            <%= render @comments %>
          </ul>
          <%= render 'comments/form' %>
        </div>
      </div>
    </div>
  </div>
</div>


<% else %>
<h1>Welcome to Secret SantApp</h1>
  <%= render 'update_user' %>
<% end %>
