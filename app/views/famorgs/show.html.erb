<% if @user.last_name.present? %>
  <% if current_user.famorgs.present? %>
  <div class="center">
    <h1><%= @famorg.seasons.last.year.strftime('%Y') %> <em><%= @famorg.name %></em></h1>
  </div>
      <% if @group_season.first.santas_assigned? %>
        <%= render 'assigned' %>
      <% else %>
        <%= render 'not_assigned' %>
      <% end %>
  <% else %>
    <%= render 'no_group' %>
  <% end %>
  <% if @famorg_admin.admin? %>
  <div class="row">
    <div class="col">
      <br><%= link_to "Edit Group", edit_famorg_path(@famorg), class: "btn red" %>
    </div>
  </div>
  <% end %>

<div class="divider"></div>

<div class="section">
  <div class="center">
    <h3>Discussion</h3>
    <div class="row">
      <div class="col s12">
        <div class="card-panel">
          <span class="white-text">
            <% @comments.each do |comment| %>
            <div class="chip">
              <%= image_tag attachment_url(comment.user, :profile_image, fallback: "default_avatar.png") %>
              <%= comment.body %> - <a class="tooltipped" data-position="right" data-delay="50"
              data-tooltip="<%= comment.created_at.strftime('%m/%d/%Y') %>
                -<%= comment.user.name %>"><%= comment.created_at.strftime('%l:%M %p') %></a> <%= link_to "Delete", famorg_comment_path(@famorg, comment),
                method: :delete,
                data: { confirm: 'Are you sure?' } if comment.user == current_user %>
            </div>
            <br>
            <% end %>
          </span>
          <%= simple_form_for([@famorg, @famorg.comments.build]) do |f| %>
            <%= f.error_notification %>
            <div class="row">
              <div class="input-field col s6">
                <%= f.input :body, label: false, placeholder: "Leave Comment", input_html: { required: true, class: "materialize-textarea", id: "textarea1" } %>
              </div>
              <div class="input-field col" id="comment_button">
                <%= f.button :submit, "Comment", id: "comment_button" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<% else %>
<h1>Welcome to Secret SantApp</h1>
  <%= render 'update_user' %>
<% end %>
