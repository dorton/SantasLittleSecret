
<div class="section center">
  <h4>You are the Secret Santa for:</h4>
  <% if @recipient.present? %>
  <div class="row">
    <div class="col m2 l4"></div>
    <div class="col s12 m8 l4">
      <%= link_to user_path(@recipient) do %>
      <div class="card medium">
        <div class="card-image">
          <%= attachment_image_tag(@recipient, :profile_image, fallback: 'default_avatar.png') %>
        </div>
        <div class="card-action">
          <p><%= link_to "#{@recipient.name.titleize} #{@recipient.email}", user_path(@recipient) %></p>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col m2 l4"></div>
  </div>
  <% end %>
</div>
<div class="divider"></div>
<div class="section">
  <% if @users_invitation_accepted.present? %>
    <h4>One of these participants is your santa:</h4>
    <div class="row">
      <% @users_invitation_accepted.where.not(id: current_user.id).each do |user| %>
      <div class="col s12 m7 l4">
        <%= link_to user_path(user) do %>
        <div class="card medium">
          <div class="card-image">
            <%= attachment_image_tag(user, :profile_image, fallback: 'default_avatar.png') %>
          </div>
          <div class="card-action">
            <p><%= user.name.titleize %></p>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
    </div>
  <% end %>
</div>
<% if @users_invitation_not_accepted.present? %>
<div class="divider"></div>
<div class="section">
  <h4>Invitations Pending</h4><hr>
  <div class="row">
    <% @users_invitation_not_accepted.each do |user| %>
    <div class="col s12 m7 l4">
      <div class="card medium">
        <div class="card-image">
          <%= attachment_image_tag(user, :profile_image, fallback: 'default_avatar.png') %>
        </div>
        <div class="card-action">
          <p><%= link_to "#{user.name.titleize} #{user.email}", user_path(user) %></p>
        </div>
      </div>
    </div>
      <% end %>
  </div>
  <% end %>
</div>
