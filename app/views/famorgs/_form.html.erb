<%= simple_form_for(@famorg) do |f| %>
  <%= f.error_notification %>
<div class="row">
  <div class="col s12 m10 l6">
    <div class="form-inputs">
      <%= f.input :name, required: true, label: false, placeholder: 'Enter name of group', input_html: {required: true, autofocus: true} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create Group" %>
    </div>
  <% end %>
  </div>
</div>
