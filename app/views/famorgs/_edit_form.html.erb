<%= simple_form_for(@famorg) do |f| %>
  <%= f.error_notification %>
<div class="row">
  <div class="col s12 m10 l6">
    <div class="form-inputs">
      <%= f.input :name, required: true, label: false, placeholder: 'Enter name of group', input_html: {required: true, autofocus: true} %>
      <%= f.text_field :date, class: "datepicker", placeholder: 'Date of Exchange' %>
      <%= f.input :cost, placeholder: 'Value Cap - Ex. 30', label: false %>
      <%= f.input :santas_assigned  %>

    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
  </div>
</div>
